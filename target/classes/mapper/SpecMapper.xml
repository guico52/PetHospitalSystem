<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.guico.mapper.SpecMapper">
    <select id="selectAll" resultType="list">
        SELECT * FROM specialties
    </select>

    <select id="selectByName" resultType="com.guico.pojo.Spec">
        SELECT * FROM specialties WHERE name = #{name}
    </select>

    <select id="selectByNameAndId" resultType="com.guico.pojo.Spec">
        SELECT * FROM specialties WHERE name = #{name} AND id != #{id}
    </select>

    <select id="selectById" resultType="com.guico.pojo.Spec">
        SELECT * FROM specialties WHERE id = #{id}
    </select>

    <delete id="deleteById" parameterType="int">
        DELETE FROM specialties WHERE id = #{id}
    </delete>

    <insert id="insertSpec" parameterType="com.guico.pojo.Spec">
        INSERT INTO specialties(name) VALUES(#{name})
    </insert>

    <update id="updateSpec" parameterType="com.guico.pojo.Spec">
        UPDATE specialties SET name = #{name} WHERE id = #{id}
    </update>


</mapper>