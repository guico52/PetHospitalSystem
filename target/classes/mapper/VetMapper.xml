<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.guico.mapper.VetMapper">
    <select id="selectAll" resultType="list">
        SELECT * FROM vets
    </select>

    <select id="selectById" resultType="com.guico.pojo.Vet">
        SELECT * FROM vets WHERE id = #{id}
    </select>

    <select id="selectByName" resultType="com.guico.pojo.Vet">
        SELECT * FROM vets WHERE name = #{name}
    </select>

    <delete id="deleteById">
        DELETE FROM vets WHERE id = #{id}
    </delete>

    <insert id="insertVet">
        INSERT INTO vets(id, name) VALUES (#{id}, #{name})
    </insert>

    <update id="updateVet">
        UPDATE vets SET name = #{name} WHERE id = #{id}
    </update>

    <!--  由于vet和spec存在一对多的关系,所以可能需要通过spec查询vet  -->
    <select id="selectVetBySpecId" resultType="arraylist">
        SELECT * FROM vets WHERE id IN (SELECT id FROM vet_specialties WHERE id = #{id})
    </select>

    <select id="selectVetBySpecName" resultType="arraylist">
        SELECT * FROM vets WHERE id IN (SELECT id FROM vet_specialties WHERE name = #{name})
    </select>

</mapper>