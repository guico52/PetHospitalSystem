<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.guico.mapper.EmpMapper">
    <select id="selectEmpByName" resultType="com.guico.pojo.Emp">
        select *
        from employee
        where name = #{name}
    </select>

    <select id="selectAll" resultType="list">
        select *
        from employee
    </select>

    <insert id="insertEmp" parameterType="com.guico.pojo.Emp">
        insert into employee(id, name, password)
        values (#{id}, #{name}, #{password})
    </insert>

    <update id="updateEmp" parameterType="com.guico.pojo.Emp">
        update employee
        set name=#{name},
            password=#{password}
        where id = #{id}
    </update>

    <delete id="deleteById" parameterType="com.guico.pojo.Emp">
        delete
        from employee
        where id = #{id}
    </delete>
</mapper>
